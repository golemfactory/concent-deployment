apiVersion: extensions/v1beta1
kind:       Deployment
metadata:
  name: gatekeeper
spec:
  replicas:             2
  revisionHistoryLimit: 2
  template:
    metadata:
      labels:
        run: gatekeeper
    spec:
      containers:
        - name:             gatekeeper
          image:            {{ docker_registry }}/{{image_prefix }}concent-api:{{ image_version }}
          imagePullPolicy:  Always
          ports:
            - containerPort: 80
          resources:
            requests:
              memory: "0.5Gi"
              cpu:    "50m"
            limits:
              memory: "1Gi"
              cpu:    "800m"
          volumeMounts:
            - name:      concent-api-secrets-{{ deployment_version }}
              mountPath: /srv/http/concent_api/concent_api/settings/secrets/
              readOnly:  true
            - name:      gatekeeper-settings-{{ deployment_version }}
              mountPath: /srv/http/concent_api/concent_api/settings/config_map/
              readOnly:  true
      volumes:
        - name: concent-api-secrets-{{ deployment_version }}
          secret:
            secretName: concent-api-secrets-{{ deployment_version }}
        - name: gatekeeper-settings-{{ deployment_version }}
          configMap:
            name: gatekeeper-settings-{{ deployment_version }}
---
apiVersion: v1
kind:       Service
metadata:
  name: gatekeeper
  labels:
    run: gatekeeper
spec:
  type: ClusterIP
  ports:
    - port:       80
      targetPort: 80
      name:       gatekeeper-port
  selector:
    run: gatekeeper
